<%= form_for @video do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :source %>
    <%= select_tag(:source, options_for_select([['YouTube', 'youtube']])) %>

    <%= f.label :link %>
    <%= f.url_field :link %>

    <%= f.submit 'Save', :class => "btn btn-success" %>
<% end %>